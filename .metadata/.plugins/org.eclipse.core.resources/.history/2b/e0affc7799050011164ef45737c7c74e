import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.security.crypto.password.PasswordEncoder;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.ey.dto.request.LoginRequest;
import com.ey.dto.request.SignupRequest;
import com.ey.entity.Customer;
import com.ey.entity.UserRole;
import com.ey.repository.CustomerRepository;
import com.ey.repository.UserRoleRepository;
import com.ey.security.JwtUtil;

@RestController
@RequestMapping("/auth")
public class AuthController {

    @Autowired
    private PasswordEncoder passwordEncoder;

    @Autowired
    private CustomerRepository customerRepository;

    @Autowired
    private UserRoleRepository userRoleRepository;

    @Autowired
    private JwtUtil jwtUtil;

    @PostMapping("/register")
    public String register(@RequestBody SignupRequest request) {
        // Save customer with encoded password
        Customer customer = new Customer();
        customer.setName(request.getName());
        customer.setEmail(request.getEmail());
        customer.setPhone(request.getPhone());
        customer.setCity(request.getCity());
        customer.setAddress(request.getAddress());
        customer.setPassword(passwordEncoder.encode(request.getPassword())); // important
        customerRepository.save(customer);

        // Save role
        UserRole userRole = new UserRole();
        userRole.setCustomerId(customer.getId());
        userRole.setRoleName(request.getRole().name());
        userRoleRepository.save(userRole);

        // Generate token
        String token = jwtUtil.generateToken(customer.getEmail(), request.getRole().name());
        return token;
    }

    @PostMapping("/login")
    public ResponseEntity<String> login(@RequestBody LoginRequest request) {
        Customer customer = customerRepository.findByEmail(request.getEmail())
                .orElseThrow(() -> new RuntimeException("Customer not found"));

        if (!passwordEncoder.matches(request.getPassword(), customer.getPassword())) {
            return ResponseEntity.status(HttpStatus.UNAUTHORIZED)
                    .body("Invalid email or password");
        }

        List<UserRole> roles = userRoleRepository.findByCustomerId(customer.getId());
        String role = roles.isEmpty() ? "BUYER" : roles.get(0).getRoleName();

        String token = jwtUtil.generateToken(customer.getEmail(), role);
        return ResponseEntity.ok(token);
    }
}
